@model CategoryItem_Task.Models.Category

@{
	ViewBag.Title = "Details";
}

<h2>Category Details</h2>

<div>
	<table class="table">
		<tr>
			<td>Category Name</td>
			<td>@Model.Name</td>
		</tr>
		<tr>
			<td>Category Place</td>
			<td>@Model.Place</td>
		</tr>
	</table>
	@Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-success" }) 
	@Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-dark" })

</div>

